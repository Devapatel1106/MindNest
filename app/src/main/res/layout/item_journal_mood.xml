<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_16sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardDate"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_90sdp"
        app:cardCornerRadius="@dimen/_16sdp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/lavender_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/text_on_lavender"
            android:text="01\nMon"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_21ssp"
            android:textStyle="bold"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/_4sdp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardJournal"
        android:layout_width="0dp"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginStart="@dimen/_12sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/lavender_light"
        app:layout_constraintStart_toEndOf="@id/cardDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cardDate">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_16sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtJournal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="Today I felt calm..."
                android:textSize="@dimen/_13ssp"
                android:textColor="@android:color/white"
                android:maxLines="3"
                android:ellipsize="end"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/txtMoodEmoji"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtMoodEmoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ™‚"
                android:textSize="@dimen/_17ssp"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnEdit"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/edit_square_24px"
                app:tint="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
