<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingTop="@dimen/_48sdp"
    android:paddingBottom="@dimen/_24sdp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/sleepCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardElevation="@dimen/_4sdp"
        app:shapeAppearanceOverlay="@style/CardTopRoundedOverlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_20sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16sdp"
                android:text="@string/add_sleep"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/_12sdp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtStartHour"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_time_box"
                    android:gravity="center"
                    android:hint="HH"
                    android:padding="@dimen/_10sdp"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textSize="@dimen/_11ssp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:text=":"
                    android:textSize="@dimen/_19ssp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtStartMinute"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_time_box"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:hint="MM"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textSize="@dimen/_11ssp" />

                <RadioGroup
                    android:id="@+id/rgStartAmPm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/_16sdp">

                    <RadioButton
                        android:id="@+id/rbStartAm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="AM" />

                    <RadioButton
                        android:id="@+id/rbStartPm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PM" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/_12sdp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtEndHour"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_time_box"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:hint="HH"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textSize="@dimen/_11ssp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:text=":"
                    android:textSize="@dimen/_19ssp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtEndMinute"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_time_box"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:hint="MM"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textSize="@dimen/_11ssp" />

                <RadioGroup
                    android:id="@+id/rgEndAmPm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/_16sdp">

                    <RadioButton
                        android:id="@+id/rbEndAm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="AM" />

                    <RadioButton
                        android:id="@+id/rbEndPm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PM" />
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnSaveSleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/_40sdp"
        android:minHeight="@dimen/_40sdp"
        android:background="@drawable/btn_save_background"
        android:enabled="false"
        android:scaleType="center"
        android:scaleX="1.4"
        android:scaleY="1.4"
        android:src="@drawable/baseline_check_24"
        android:translationY="@dimen/_minus28sdp"
        android:translationZ="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/sleepCard" />

</androidx.constraintlayout.widget.ConstraintLayout>
