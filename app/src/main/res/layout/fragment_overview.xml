<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="userName"
            type="String" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/overviewScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:clipToPadding="false"
            android:overScrollMode="never">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_16sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvGreeting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='@{@string/good_morning + ", " + userName}'
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:paddingBottom="@dimen/_12sdp"
                    tools:text="Good morning, John" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/quoteCard"
                    style="@style/MindCardStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_20sdp"
                    app:cardBackgroundColor="@color/lavender_light">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvQuote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/_72sdp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="3"
                        android:padding="@dimen/_12sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="italic"
                        tools:text="Your mindset is examined in the midst of unilluminated storms." />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mindScoreCard"
                    style="@style/MindCardStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_20sdp"
                    app:cardBackgroundColor="@color/white">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_14sdp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvMindTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mind_score"
                            android:textStyle="bold"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/text_primary"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <FrameLayout
                            android:id="@+id/mindScoreCircle"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_150sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            app:layout_constraintTop_toBottomOf="@id/tvMindTitle"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <ProgressBar
                                android:id="@+id/progressMindScore"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:max="100"
                                android:progress="0"
                                android:indeterminate="false"
                                android:progressDrawable="@drawable/circular_progress_drawable"
                                android:rotation="-90" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvMindScore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/mind_score_placeholder"
                                android:textSize="@dimen/_24ssp"
                                android:textStyle="bold"
                                android:textColor="@color/lavender_dark"
                                tools:text="78" />

                        </FrameLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvMindStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:text="@string/good_day"
                            android:textSize="@dimen/_10ssp"
                            app:layout_constraintTop_toBottomOf="@id/mindScoreCircle"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:text="Great Day!" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/weeklyReportCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_16sdp"
                    app:cardCornerRadius="@dimen/_12sdp"
                    app:cardElevation="@dimen/_4sdp"
                    app:cardBackgroundColor="@color/Light">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_12sdp">

                        <View
                            android:id="@+id/weeklyAccent"
                            android:layout_width="@dimen/_4sdp"
                            android:layout_height="0dp"
                            android:background="@color/lavender_dark"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvWeeklyTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:text="@string/weekly_performance"
                            android:textStyle="bold"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/text_primary"
                            app:layout_constraintStart_toEndOf="@id/weeklyAccent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvWeeklyAverage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:text="@string/weekly_average_placeholder"
                            android:textSize="@dimen/_16ssp"
                            android:textStyle="bold"
                            android:textColor="@color/lavender_dark"
                            app:layout_constraintStart_toStartOf="@id/tvWeeklyTitle"
                            app:layout_constraintTop_toBottomOf="@id/tvWeeklyTitle" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvWeeklyMeta"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:text="@string/weekly_meta_placeholder"
                            android:textSize="@dimen/_8ssp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            app:layout_constraintStart_toEndOf="@id/tvWeeklyAverage"
                            app:layout_constraintTop_toTopOf="@id/tvWeeklyAverage"
                            app:layout_constraintBottom_toBottomOf="@id/tvWeeklyAverage"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvWeeklyInsight"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:text="@string/weekly_insight_placeholder"
                            android:textSize="@dimen/_8ssp"
                            android:textStyle="italic"
                            android:textColor="@color/lavender_dark"
                            app:layout_constraintTop_toBottomOf="@id/tvWeeklyAverage"
                            app:layout_constraintStart_toStartOf="@id/tvWeeklyTitle"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewFeatures"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:clipToPadding="false"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:scrollbars="none"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabChatbot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:srcCompat="@drawable/mode_comment_24px"
            app:tint="@android:color/white"
            app:backgroundTint="@color/lavender_primary"
            app:elevation="@dimen/_6sdp"/>

    </FrameLayout>

</layout>