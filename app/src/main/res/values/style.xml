<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardTopRoundedOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_24sdp</item>
        <item name="cornerSizeTopRight">@dimen/_24sdp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="CardShape.TopSquareBottomRounded"
        parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/_30sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_30sdp</item>
    </style>

    <style name="TabDotsStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabBackground">@drawable/tab_indicator_dot</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabPaddingTop">6dp</item>
        <item name="tabPaddingBottom">6dp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_up</item>
    </style>

</resources>
